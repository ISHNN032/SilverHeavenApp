    <corners android:radius="16dp"/> <!-- 둥근 모서리 반지름 설정 -->
    <stroke
        android:width="1dp"
        android:color="@android:color/darker_gray"/> <!-- 테두리 색상 및 두께 설정 -->
    <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp"/> <!-- 내부 여백 설정 -->
</shape>
